<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="editTextStyle">@style/AppTheme.EditText</item>
        <item name="android:windowBackground">@drawable/drawableWindowBackground</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="imageButtonStyle">@style/AppTheme.ImageButton</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NavigationBar">
    </style>
    <style name="AppTheme.NavigationBar.Title">
        <item name="android:textSize">@dimen/super_middle</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- window -->
    <style name="AppTheme.GlobalWindowStyle">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!-- EditText -->
    <style name="AppTheme.EditText" parent="@style/Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_background_drawable</item>
        <item name="android:textSize">@dimen/middle</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <!-- TextView -->
    <style name="AppTheme.LabelText">
        <item name="android:textSize">@dimen/middle</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.TitleText">
        <item name="android:textSize">@dimen/middle</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.TitleText.Dark">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!-- Button -->
    <style name="AppTheme.Button" parent="@style/Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/base_btn_background</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/middle</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.ImageButton" parent="@style/Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/drawableTransparent</item>
    </style>

    <!-- register fragment tab style-->
    <style name="AppTheme.Register"></style>
    <style name="AppTheme.Register.TabView">
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">@dimen/big</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- setting style -->
    <style name="AppTheme.Setting"></style>
    <style name="AppTheme.Setting.Item">
        <item name="android:textSize">@dimen/big</item>
        <item name="android:textColor">@color/setting_item_text_color</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/drawableWindowBackground</item>
    </style>

    <style name="AppTheme.Setting.Item.Logout" parent="AppTheme.Setting.Item">
        <item name="android:textSize">@dimen/super_middle</item>
        <item name="android:textColor">@color/logout_button_text_color</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/drawableWindowBackground</item>
    </style>
</resources>
