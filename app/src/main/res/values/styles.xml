<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="editTextStyle">@style/AppTheme.EditText</item>
        <item name="android:windowBackground">@drawable/window_background</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="imageButtonStyle">@style/AppTheme.ImageButton</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NavigationBar">
        <item name="android:layout_marginLeft">-17dp</item>
        <item name="android:layout_marginRight">-17dp</item>
    </style>

    <!-- window -->
    <style name="AppTheme.GlobalWindowStyle">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!-- EditText -->
    <style name="AppTheme.EditText" parent="@style/Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_background_drawable</item>
        <item name="android:textSize">@dimen/middle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:height">@dimen/edit_text_height</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <!-- TextView -->
    <style name="AppTheme.LabelText">
        <item name="android:textSize">@dimen/middle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.TitleText">
        <item name="android:textSize">@dimen/middle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Button -->
    <style name="AppTheme.Button" parent="@style/Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/base_btn_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/middle</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.ImageButton" parent="@style/Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/transparent</item>
    </style>
</resources>
